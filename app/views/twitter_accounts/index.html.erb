<div class = "d-flex align-items-center justify-content-between">
	<h1>Twitter Accounts</h1>
	<%= link_to "Connect your twitter accounts", "/auth/twitter", method: :post, class: "btn btn-primary"%>
</div>

<% @twitter_accounts.each do |twitter_account| %>
	<div class = "d-felx align-items-center mb-4">
		<div class = "me-4"> 
		<%= image_tag twitter_account.image, class: "rounded-circle" %>
		<%= link_to "@#{twitter_account.username}", "https://twitter.com/#{twitter_account.username}", target: :_blank %>

		</div>
		</br>
		<%= button_to "Disconnect", twitter_account, method: :delete, data: { confirm: "Are you Sure you want to delete?" }%>
	</div>
<% end %>
